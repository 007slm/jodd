						<configuration>
							<echos>
								<echo>+++ post-clean phase</echo>
							</echos>
						</configuration>
					</execution>

					<!-- site lifecycle -->
					<execution>
						<id>pre-site</id>
						<phase>pre-site</phase>
						<goals>
							<goal>echo</goal>
						</goals>
						<configuration>
							<echos>
								<echo>+++ pre-site phase</echo>
							</echos>
						</configuration>
					</execution>
					<execution>
						<id>site</id>
						<phase>site</phase>
						<goals>
