						<goals>
							<goal>echo</goal>
						</goals>
						<configuration>
							<echos>
								<echo>+++ process-resources phase</echo>
							</echos>
						</configuration>
					</execution>
					<execution>
						<id>compile</id>
						<phase>compile</phase>
						<goals>
							<goal>echo</goal>
						</goals>
						<configuration>
							<echos>
								<echo>+++ compile phase</echo>
